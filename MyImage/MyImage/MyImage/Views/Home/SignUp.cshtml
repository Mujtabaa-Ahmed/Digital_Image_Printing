<div class="inner-banner inner-bg9">
    <div class="container">
        <div class="inner-title">
            <h3>Sign Up</h3>
            <ul>
                <li>
                    <a href="index.html">Home</a>
                </li>
                <li>
                    <i class="bx bxs-chevrons-right"></i>
                </li>
                <li >Sign Up</li>
                
            </ul>
        </div>
    </div>
</div>


<section class="sing-up-area ptb-100">
    <div class="container">
        <div class="contact-wrap-form sing-in-width">
            <div class="section-title text-center">
                <span>Sign Up</span>
                <h2 id="confirmation">Create An Account!</h2>
                <p>with your social network</p>
                <ul class="sing-social-icon">
                    <li>
                        <a href="#"><i class="bx bxl-facebook"></i></a>
                    </li>
                    <li>
                        <a href="#"><i class="bx bxl-twitter"></i></a>
                    </li>
                    <li>
                        <a href="#"><i class="bx bxl-google-plus"></i></a>
                    </li>
                </ul>
            </div>
          
                <div class="row">
                    <div class="col-12">
                        <div class="form-group ">
                            <input class="form-control col-lg-6" id="f_name" type="text" name="first_name" placeholder="First Name">
                        <span id="match1" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group ">
                            <input class="form-control col-lg-6" id="l_name" type="text" name="last_name" placeholder="Last Name">
                        <span id="match2" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <input class="form-control" id="email" type="email" name="e_mail" placeholder="Email">
                        <span id="match3" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <input class="form-control" id="pass" type="password" name="password" placeholder="Password">
                            <span id="match" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <input class="form-control" id="cpass" type="password" name="confirm_password" placeholder="Confirm Password">
                            <span id="match_" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 text-center">
                        <button class="default-btn btn-two sing-btn" id="button">
                            Sign Up
                        </button>
                    </div>
                    <div class="col-12">
                        <p class="account-desc">
                            Already have an account?
                            <a href="sign-in.html">Sign In</a>
                        </p>
                    </div>
                </div>
           
        </div>
    </div>
</section>

 <script>
    $(document).ready(function () {
        $("#button").click(function () {
            var first_name = $("#f_name").val();
            var last_name = $("#l_name").val();
            var e_mail = $("#email").val();
            var password = $("#pass").val();
            var Confirm_pass = $("#cpass").val();
            if (first_name != "" && last_name != "" && e_mail != "" && password != "" && Confirm_pass != "") {
                if (password == Confirm_pass) {
                    var add = { "first": first_name, "last": last_name, "mail": e_mail, "password": password, "Confirm": Confirm_pass };
                    $.ajax({
                        type: "post",
                        url: '@Url.Action("signingup", "Home")',
                        data: add,
                        success: function (data) {
                            window.location.href = '@Url.Action("LogIn", "Home")'
                        },
                        error: function () {
                            alert("Not Inserted");
                        }
                    });
                } else {
                    $("#pass").css("border-color", "red");
                    $("#cpass").css("border-color", "red");
                    $("#f_name").css("border-color", "red");
                    $("#l_name").css("border-color", "red");
                    $("#email").css("border-color", "red");
                    $("#match").html("password not matched");
                    $("#match_").html("password not matched");
                }
            } else if (first_name == "" && last_name == "" && e_mail == "" && password == "" && Confirm_pass == "") {
                $("#pass").css("border-color", "red");
                $("#cpass").css("border-color", "red");
                $("#f_name").css("border-color", "red");
                $("#l_name").css("border-color", "red");
                $("#email").css("border-color", "red");
                $("#match_").html("Empity Field");
                $("#match1").html("Empity Field");
                $("#match2").html("Empity Field");
                $("#match3").html("Empity Field");
                $("#match").html("Empity Field");
            } else if (first_name == "" && last_name == "" && e_mail == "" && password == "") {
                $("#pass").css("border-color", "red");
                $("#f_name").css("border-color", "red");
                $("#l_name").css("border-color", "red");
                $("#email").css("border-color", "red");
                $("#match1").html("Empity Field");
                $("#match2").html("Empity Field");
                $("#match3").html("Empity Field");
                $("#match").html("Empity Field");


            } else if (first_name == "" && last_name == "" && e_mail == "") {
                $("#f_name").css("border-color", "red");
                $("#l_name").css("border-color", "red");
                $("#email").css("border-color", "red");
                $("#match3").html("Empity Field");
                $("#match2").html("Empity Field");
                $("#match1").html("Empity Field");

            } else if (first_name == "" && last_name == "") {
                $("#f_name").css("border-color", "red");
                $("#l_name").css("border-color", "red");
                $("#match2").html("Empity Field");
                $("#match1").html("Empity Field");

            } else {
                if (first_name == "") {
                    $("#f_name").css("border-color", "red");
                    $("#match1").html("Empity Field");
                } else if (last_name == "") {
                    $("#l_name").css("border-color", "red");
                    $("#match2").html("Empity Field");
                } else if (e_mail == "") {
                    $("#email").css("border-color", "red");
                    $("#match3").html("Empity Field");

                } else if (password == "") {
                    $("#match").html("Empity Field");
                    $("#pass").css("border-color", "red");

                } else if (Confirm_pass == "") {
                    $("#cpass").css("border-color", "red");
                    $("#match_").html("Empity Field");

                }
            }
            
           
        });  
    });
</script> 