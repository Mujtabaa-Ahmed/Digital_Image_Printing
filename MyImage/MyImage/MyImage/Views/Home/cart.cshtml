@{
    int total = 0;
}
<div class="inner-banner inner-bg6">
<div class="container">
<div class="inner-title">
<h3>Cart</h3>
<ul>
<li>
<a href="index.html">Home</a>
</li>
<li>
<i class="bx bxs-chevrons-right"></i>
</li>
<li>Cart</li>
</ul>
</div>
</div>
</div>


<section class="cart-wraps-area ptb-100">
<div class="container">
<div class="row">
<div class="col-lg-12 col-md-12">
<form>
<div class="cart-wraps">
<div class="cart-table table-responsive">
<table class="table table-bordered">
<thead>
<tr>
<th scope="col">Priview</th>
<th scope="col">Service</th>
                                        <th scope="col">Size</th>
                                        <th scope="col">Price</th>
<th scope="col">Quantity</th>
<th scope="col">Total</th>
</tr>
</thead>
<tbody>


                                    @foreach (var cart in list.carts)
                                    {
                                        int gettotal = int.Parse(cart.service_quantity) * int.Parse(cart.service_price);
                                        total = total + gettotal;
                                        <tr>
                                            <td class="product-thumbnail">
                                                <a href="#">
                                                    <img src="~/img/cart/@cart.image_stored" alt="Image">
                                                </a>
                                            </td>
                                            <td class="product-name">
                                                <a href="#">@cart.service_name</a>
                                            </td>
                                            <td class="product-name">
                                                <a href="#">@cart.service_size</a>
                                            </td>
                                            <td class="product-price">
                                                <span class="unit-amount" id="price_@cart.service_id.ToString()">$@cart.service_price.ToString()</span>
                                            </td>
                                            <td class="product-quantity">
                                                <div class="input-counter">
                                                    
                                                    <input type="number" min="1" id="dty_@cart.service_id.ToString()" value="@cart.service_quantity.ToString()">
                                                    
                                                </div>
                                            </td>
                                            <td class="product-subtotal">
                                                <span class="subtotal-amount" id="total_@cart.service_id.ToString()">$@gettotal</span>
                                                <a href="#" class="remove">
                                                    <i class="bx bx-trash"></i>
                                                </a>
                                            </td>
                                            <script>
                                                $(document).ready(function () {
                                                    $("#dty_@cart.service_id.ToString()").click("Keyup mouseup", function () {
                                                        var item_id = "@cart.service_id.ToString()";
                                                        var quantity = $("#dty_@cart.service_id.ToString()").val();
                                                        var item_name = "@cart.service_name.ToString()";
                                                        var item_price = @cart.service_price.ToString();
                                                        var total = quantity * item_price;

                                                        $("#total_@cart.service_id.ToString()").html("$" + total);

                                                    });
                                                })
                                            </script>
                                            
                                        </tr>
                                     
                                    }

</tbody>
</table>
</div>
<div class="cart-buttons">
<div class="row align-items-center">
<div class="col-lg-7 col-sm-7 col-md-7">
<div class="continue-shopping-box">
<a href="#" class="default-btn">
Continue Shopping
</a>
</div>
</div>
<div class="col-lg-5 col-sm-5 col-md-5 text-end">
<a href="#" class=" default-btn">
Update Cart
</a>
</div>
</div>
</div>
</div>
<div class="row">
<div class="col-lg-6">
<div class="cart-calc">
<div class="cart-wraps-form">
<h3>Calculate Shipping</h3>
<div class="row">
<div class="col-lg-6">
<div class="form-group">
<select>
<option >Credit Card Type</option>
<option >Another option</option>
<option >A option</option>
</select>
</div>
</div>
<div class="form-group col-lg-6">
<input type="text" class="form-control" placeholder="Credit Card Number">
</div>
<div class="form-group col-12">
<input type="text" class="form-control" placeholder="Card Verification Number">
</div>
</div>
<div class="form-group">
<input type="text" class="form-control" placeholder="Coupon Code">
</div>
<a href="#" class="default-btn">
Apply Coupon
</a>
</div>
</div>
</div>
<div class="col-lg-6">
<div class="cart-totals">
<h3>Cart Totals</h3>
<ul>
<li>Subtotal <span>$150.00</span></li>
<li>Shipping <span>$30.00</span></li>
<li>Coupon <span>$20.00</span></li>
<li>Total <span><b>$160.00</b></span></li>
</ul>
<a href="#" class="default-btn">
Proceed To Checkout
</a>
</div>
</div>
</div>
</form>
</div>
</div>
</div>
</section>