<div class="inner-banner inner-bg2">
    <div class="container">
        <div class="inner-title">
            <h3>LogIn</h3>
            <ul>
                <li>
                    <a href="index.html">Home</a>
                </li>
                <li>
                    <i class="bx bxs-chevrons-right"></i>
                </li>
                <li>LogIn</li>
            </ul>
        </div>
    </div>
</div>


<section class="sing-in-area ptb-100">
    <div class="container">
        <div class="contact-wrap-form sing-in-width">
            <div class="section-title text-center">
                <span>LogIn</span>
                <h2 id="validation">Sing In to your account!</h2>
                <p>with your social network</p>
                <ul class="sing-social-icon">
                    <li>
                        <a href="#"><i class="bx bxl-facebook"></i></a>
                    </li>
                    <li>
                        <a href="#"><i class="bx bxl-twitter"></i></a>
                    </li>
                    <li>
                        <a href="#"><i class="bx bxl-google-plus"></i></a>
                    </li>
                </ul>
            </div>
            
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <input class="form-control" id="login_mail" type="text" name="name" placeholder="Username or Email">
                            <span id="mailV"  class="text-danger "></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <input class="form-control" id="password" type="password" name="password" placeholder="Password">
                            <span id="pasV" class="text-danger span"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6 form-condition">
                        <div class="agree-label">
                            <input type="checkbox" id="chb1">
                            <label for="chb1">
                                Remember Me
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6">
                        <a class="forget" href="recover-password.html">Forgot my password?</a>
                    </div>
                    <div class="col-12 text-center">
                        <button id="log" class="default-btn btn-two sing-btn">
                            Sing In Now
                        </button>
                    </div>
                    <div class="col-12">
                        <p class="account-desc">
                            Not a member?
                            <a href="">Sign Up</a>
                        </p>
                    </div>
                </div>
            
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        $("#log").click(function () {
            $("#mailV").html("");
            $("#pasV").html("");
            $("#login_mail").css("border-color", "transparent");
            $("#password").css("border-color", "transparent");

            var mail = $("#login_mail").val();
            var pass = $("#password").val();
            if (mail != "" && pass != "") {
                var credentials = { "email": mail, "password": pass };
                $.ajax({
                    type: "post",
                    url: '@Url.Action("Logining" , "Home")',
                    data: credentials,
                    success: function (data) {
                        if (data == "Loged In") {
                            location.reload();
                        } else if (data == "E-mail or Password is incorrect") {
                            $("#validation").html("E-mail or Password is incorrect");
                            $("#validation").css("color","red");
                        }

                    },
                    error: function () {
                        alert("E-mail or Password is incorrect");
                    }
                });
            } else if (mail == "" && pass == "") {
                $("#password").css("border-color", "red");
                $("#login_mail").css("border-color", "red");
                $("#mailV").html("Empity Field");
                $("#pasV").html("Empity Field");

            } else 
            {
                if (mail == "") {
                    $("#login_mail").css("border-color", "red");
                    $("#mailV").html("Empity Field");

                } else if (pass == "") {
                    $("#password").css("border-color", "red");
                    $("#pasV").html("Empity Field");

                }
            }
            
            
        });
        
    });
</script>
